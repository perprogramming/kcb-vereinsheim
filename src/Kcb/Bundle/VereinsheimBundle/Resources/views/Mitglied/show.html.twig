{% extends "KcbVereinsheimBundle:Layout:base.html.twig" %}

{% set roleLabels = {
    ROLE_ADMIN: 'Admin',
    ROLE_MITGLIED: 'Mitglied'
} %}

{% block pageTitle %}{{ entity.vorname }} {{ entity.nachname }}{% endblock %}

{% block content %}
    <div><strong>E-Mail-Adresse:</strong> <a href="mailto:{{ entity.email }}">{{ entity.email }}</a></div>
    <div><strong>Handynummer:</strong> {{ entity.handynummer }}</div>
    <h2>Rollen</h2>
    <ul>
        {% for role in entity.roles %}
            <li>{{ attribute(roleLabels,role) }}
        {% endfor %}
    </ul>
{%  endblock %}

